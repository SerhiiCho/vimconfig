--recurse
--languages=PHP
--exclude=.svn
--exclude=.git
--exclude="*/_*cache/*"
--exclude="*/_*logs{0,1}/*"
--exclude="*/_*data/*"
--exclude=node_modules
--exclude=bower_components
--exclude=vendor
--totals=yes
--tag-relative=yes
--PHP-kinds=+cf
--regex-PHP=/abstract class ([^ ]*)/\1/c/    
--regex-PHP=/interface ([^ ]*)/\1/c/ 
--regex-PHP=/trait ([^ ]*)/\1/c/
--regex-PHP=/(public |static |abstract |protected |private )+ function +([^ \(]*)/\2/f/
